{
  "name": "codecouncil-ai-backend",
  "version": "1.0.0",
  "description": "CodeCouncil AI SaaS Backend",
  "type": "module",
  "main": "src/index.ts",
  "engines": {
    "node": ">=18 <23"
  },
  "scripts": {
    "dev": "NODE_ENV=development node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "node --loader ts-node/esm prisma/seed.ts",
    "db:push": "prisma db push"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@prisma/client": "^5.7.0",
    "@sendgrid/mail": "^8.1.0",
    "@sentry/node": "^7.84.0",
    "@sentry/tracing": "^7.84.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.0",
    "google-auth-library": "^9.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "prom-client": "^15.0.0",
    "stripe": "^14.8.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.0",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.6",
    "typescript": "~5.8.2"
  }
}
